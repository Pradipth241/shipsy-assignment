// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  shipments Shipment[]
}

enum ShipmentStatus {
  PENDING
  IN_TRANSIT
  DELIVERED
  CANCELLED // Added new status
}

model Shipment {
  id                String   @id @default(cuid())
  
  // New and updated fields
  origin            String   // New
  destination       String   // New
  status            ShipmentStatus @default(PENDING)
  isFragile         Boolean  @default(false)
  weightInKg        Float
  ratePerKg         Float    // New
  shippingCost      Float    // Calculated field
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
  
  // Remove the old 'description' and 'volumeCubicMeters' fields
}